#!/usr/bin/env node

var path = require('path');
var glob = require('tape/node_modules/glob');
var testStream = require('tape').createStream();
var test = require('tape');
var Bookshelf = require('bookshelf');
var knex = require('knex')({
  client: 'pg',
  connection: {
    host: 'localhost',
    user: 'blog_dev',
    password: 'blog_dev',
    database: 'blog_dev',
    port: 5432,
    charset: 'utf8'
  }
});
Bookshelf.PG = Bookshelf(knex);

function teardown() {
  console.log('erm');
  knex.destroy();
}

testStream.pipe(process.stdout);

process.argv.slice(2).forEach(function (arg) {
  glob(arg, function (err, files) {
    files.forEach(function (file) {
      require(path.resolve(process.cwd(), file));
    });
  });
});

