{{#if current_user}}
<div class="logged-in">
  <ul>
    <li>Hi {{{current_user.name}}}</li>
    {{#if current_user.role_id}}<li><a href="{{../../config.admin_base_address}}">Dashboard</a></li>{{/if}}
    <li><a href="{{config.base_address}}/auth/logout" id="signout-persona">Sign out</a></li>
  </ul>
</div>
{{^}}
<div class="logged-in">
  <div class="buttons">
    <button id="signin-persona">Sign in with Email</button>
    <a href="{{config.base_address}}/auth/with_google" role="button" class="signin"><span class="signin-google">Sign in with Google</span></a>
    <a href="{{config.base_address}}/auth/with_github" role="button" class="signin"><span class="signin-github">Sign in with GitHub</span></a>
    <a href="{{config.base_address}}/auth/with_facebook" role="button" class="signin"><span class="signin-facebook">Sign in with Facebook</span></a>
  </div>
</div>
{{/if}}
