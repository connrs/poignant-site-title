<main role="main" class="row">
<div class="columns nine">
  {{> flash_message_alert}}
  <h1>{{page.title}}</h2>
  <p>To add a tag, update the fields below and press 'Submit' when finished.</p>
  {{> validation_errors errors}}
  <form method="post">
    <input type="hidden" name="csrf_token" value="{{csrf_token}}">
    <div class="full">
      <label for="tags_name">Name:</label>
      <input type="text" name="name" id="tags_name"{{#if tag.name}} value="{{tag.name}}"{{/if}}>
    </div>
    <div class="full">
      <label for="tags_pretty_name">Pretty name:</label>
      <input type="text" name="pretty_name" id="tags_pretty_name" value="{{attrSafe tag.pretty_name}}">
    </div>
    <div class="full">
      <label for="tags_content">Content:</label>
      <textarea name="content" id="tags_content" rows="12" cols="12">{{tag.content}}</textarea>
    </div>
    <div class="buttons">
      <a role="button" href="{{config.admin_base_address}}/posts">Exit</a>
      <input type="submit" value="Save">
    </div>
  </form>
</div>
<div class="columns three">
  {{> admin_sidebar}}
</div>
</main>
